{
  "name": "floogar",
  "description": "Tell a story.",
  "version": "0.0.1",
  "license": "SEE LICENSE IN LICENSE.md",
  "scripts": {
    "dev": "sapper dev",
    "dev:postcss:global": "NODE_ENV=development BUNDLE=App postcss client/postcss/global.postcss -o assets/css/global.css -m --verbose --config server/build",
    "// TODO": "TURN SVG AND JSON INTO JS SCRIPTS",
    "// SVG HELP": "https://svgontheweb.com, https://www.sarasoueidan.com/blog/svgo-tools/",
    "dev:svg:if": "if [ $e = \"unlink\" ]; then c=\"\\033[31m\" n=\"${f//client\\/svg\\/originals\\/}\" yarn run -s dev:svg:unlink; else c=\"\\033[32m\" yarn run -s dev:svg:compile; fi;",
    "dev:svg:info": "echo \"\\033[0;35m---> SVG file event $c$e\\033[0;35m\\033[0m $f\"",
    "dev:svg:compile": "yarn run -s dev:svg:info; run-p -s dev:svg:inline dev:svg:src;",
    "dev:svg:unlink": "yarn run -s dev:svg:info; rm client/svg/compiled/$n; rm assets/svg/$n",
    "dev:svg:inline": "svgo -q --config=server/build/svgo-config-inline.yml $f -o client/svg/compiled",
    "dev:svg:src": "svgo -q --config=server/build/svgo-config-src.yml $f -o assets/svg",
    "dev:svg:cleanup": "rm -rf client/svg/compiled; mkdir client/svg/compiled; rm -rf assets/svg; mkdir assets/svg; for i in $(find client/svg/originals -name '*.svg' -type f); do f=$i c=\"\\033[32m\" yarn run -s dev:svg:compile; done;",
    "dev:json:if": "if [ $e = \"unlink\" ]; then c=\"\\033[31m\" n=\"${f//client\\/json\\/}\" yarn run -s dev:json:unlink; else c=\"\\033[32m\" yarn run -s dev:json:compile; fi;",
    "dev:json:info": "echo \"\\033[0;35m---> JSON file event $c$e\\033[0;35m\\033[0m $f\"",
    "dev:json:compile": "yarn run -s dev:json:info; node server/build/json-compile.js",
    "dev:json:unlink": "yarn run -s dev:json:info; rm client/json/$n",
    "// watch:dev (livereload chokes)": "run-p -s dev livereload",
    "watch:dev": "run-p -s dev",
    "watch:postcss:global": "yarn run -s dev:postcss:global -w",
    "watch:svg": "SHELL=/bin/bash chokidar 'client/svg/originals/**.svg' -c 'f={path} e={event} run-s -s dev:svg:if' --silent",
    "watch:json": "SHELL=/bin/bash chokidar 'client/json/**.js' -c 'f={path} e={event} run-s -s dev:json:if' --silent",
    "livereload": "export $(cat .env.defaults | grep -v ^# | xargs); livereload . -e 'css' -w 500 -p $LIVERELOAD_PORT",
    "build": "sapper build",
    "build:FIXME:": "NODE_ENV=development sapper build",
    "export": "sapper export",
    "start": "node build",
    "cy:run": "cypress run",
    "cy:open": "cypress open",
    "db:init": "node -r esm server/db/arangodb-init",
    "m:up": "node -r esm server/utils/migration-shell",
    "m:up:all": "node -r esm server/utils/migration-shell",
    "m:down": "node -r esm server/utils/migration-shell",
    "m:down:all": "node -r esm server/utils/migration-shell",
    "m:create": "node -r esm server/utils/migration-shell",
    "m:list": "node -r esm server/utils/migration-shell",
    "m:test:up": "node -r esm server/utils/migration-shell",
    "m:test:down": "node -r esm server/utils/migration-shell",
    "test": "run-p --race dev cy:run"
  },
  "dependencies": {
    "ajv": "6.5.2",
    "arangojs": "6.3.0",
    "autoprefixer": "8.6.4",
    "bcrypt": "2.0.1",
    "body-parser": "1.18.3",
    "cheerio": "1.0.0-rc.2",
    "colors": "1.3.0",
    "compression": "^1.7.1",
    "cookie-parser": "1.4.3",
    "dotenv-expand": "4.2.0",
    "dotenv-extended": "2.0.2",
    "dotenv-parse-variables": "0.2.0",
    "esm": "3.0.61",
    "express": "4.16.3",
    "express-graphql": "0.6.12",
    "globby": "8.0.1",
    "graphql": "0.13.2",
    "graphql-tools": "3.0.4",
    "helmet": "3.12.1",
    "jsonwebtoken": "8.3.0",
    "lodash": "4.17.10",
    "lodash-es": "4.17.10",
    "morgan": "1.9.0",
    "papaparse": "4.5.0",
    "passport": "0.4.0",
    "passport-local": "1.0.0",
    "postcss": "6.0.23",
    "postcss-cli": "5.0.1",
    "postcss-custom-media": "6.0.0",
    "postcss-easy-import": "3.0.0",
    "postcss-functions": "3.0.0",
    "postcss-math": "0.0.10",
    "postcss-media-minmax": "3.0.0",
    "postcss-nested": "3.0.0",
    "postcss-reporter": "5.0.0",
    "postcss-scss": "1.0.6",
    "postcss-simple-vars": "4.1.0",
    "postcss-strip-inline-comments": "0.1.5",
    "sapper": "0.15.2",
    "sirv": "0.1.2",
    "svelte-extras": "2.0.2",
    "tinycolor2": "1.4.1"
  },
  "devDependencies": {
    "@playlyfe/gql": "2.6.0",
    "babel-preset-es2015": "6.24.1",
    "babel-register": "6.26.0",
    "chokidar-cli": "1.2.0",
    "livereload": "0.7.0",
    "migrate": "1.5.0",
    "npm-run-all": "4.1.3",
    "svelte": "2.9.7",
    "svelte-loader": "2.10.0",
    "svgo": "1.0.5",
    "webpack": "4.14.0",
    "yesno": "0.0.1"
  }
}
